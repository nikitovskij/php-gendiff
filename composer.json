{
    "name": "nikitovskij/php-gendiff",
    "description": "CLI utility for finding discrepancies in configuration files.",
    "type": "library",
    "license": "MIT",
    "authors": [
        {
            "name": "nikitovskij",
            "email": "nbaranovsky24@gmail.com"
        }
    ],
    "require": {
        "docopt/docopt": "*",
        "funct/funct": "^1.0@dev",
        "symfony/yaml": "^5.1"
    },
    "bin": [
        "bin/gendiff"
    ],
    "autoload": {
        "files": [
            "src/GenDiff.php",
            "src/Parsers/JsonParser.php",
            "src/Parsers/YmlParser.php",
            "src/Formatters/Pretty.php",
            "src/Formatters/Plain.php",
            "src/Formatters/Json.php",
            "src/Formatters/GetFormatter.php"
        ]
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "^3.0@dev",
        "phpunit/phpunit": "^9.3",
        "phpstan/phpstan": "^0.12.42"
    }
}
